<included>
    <springProperty name="appName" source="spring.application.name"/>
    <appender name="BATCH-SLACK" class="com.github.maricn.logback.SlackAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                :warning: *배치 실패 알림* :warning:
                *Application:* *`${appName:-}`*
                *[%-5level]* *Pod:* `${HOSTNAME:-}`
                *Time:* %d{yyyy-MM-dd HH:mm:ss}
                %n%msg%n
            </pattern>
        </layout>
        <webhookUri>${SLACK_WEBHOOK_URI}</webhookUri>
        <username>${SLACK_USERNAME}</username>
        <channel>${SLACK_CHANNEL}</channel>
        <iconEmoji>:rotating_light:</iconEmoji>
        <colorCoding>true</colorCoding>
    </appender>

    <appender name="ASYNC-BATCH-SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="BATCH-SLACK"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <!-- 배치 관련 로거만 처리 -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>BATCH_FAILURE</marker>
            </evaluator>
            <onMismatch>DENY</onMismatch>
            <onMatch>ACCEPT</onMatch>
        </filter>
    </appender>
</included>